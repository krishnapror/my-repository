@model IEnumerable<ItunesSearchApp.Controllers.Result>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<form asp-action="Index">
    <div class="form-group">
        @Html.TextBox("searchRegex")
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>
<table class="table">
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.artistId)
                <a href="@item.artistViewUrl" target="_blank">@item.artistViewUrl</a>
            </td>
        </tr>
}
    </tbody>
</table>


